<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />

    <screen id="tooltipScreen" controller="client.MainMenuController">

        <layer id="backgroundLayer" childLayout="center" backgroundImage="Textures/GUI/itemTooltip.png">

            <panel id="namePanel" width="95%" height="20%" valign = "top" childLayout="center">
                <text id="itemName" font="Interface/Fonts/pixelFlat11.fnt" text="" color="#cc4321" textValign = "top" textHAlign="center" />
            </panel>
            
            <panel id="descriptionPanel" width="95%" height="75%" valign = "top" childLayout="vertical" marginTop = "20%" childClip = "true">
                <text id="itemDescription" font="Interface/Fonts/pixelFlat11.fnt" text="" color="#8a8a3d" textHAlign="left" textVAlign="top" wrap="true" />
            </panel>
            
        </layer>



        
    </screen>
</nifty>